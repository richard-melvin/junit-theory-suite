<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} %-5level %logger{20} - %msg%n
      </pattern>
    </encoder>
  </appender>

    <logger name="com.github.radm.theories.runner" level="INFO" />
    <logger name="com.github.radm.theories.pairwise" level="INFO" />
  <logger name="com.github.radm.theories.test" level="INFO" />
  <root level="info">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>
